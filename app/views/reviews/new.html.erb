<div class="container">
  <div class="row">
    <div class="col">
      <h1>New Review</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>

        <%= f.submit "Save review" %>
      <% end %>
    </div>
  </div>
</div>

